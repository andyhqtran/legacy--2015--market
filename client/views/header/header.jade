template(name='header')
  header(class='header')

    // Container
    div(class='container')

      // Row
      div(class='row')

        // Col (12)
        div(class='col col-12'
            flex=''
            align-items='center'
            justify-content='space-between')

          // Logo
          a(class='logo'
            href='{{pathFor "Home"}}')
            img(src='img/logo.png'
                title='ElegantThemes')

          // Nav
          +headerNav

template(name='headerNav')
  nav(class='header-nav'): ul(flex=''
                              flex-direction='row'
                              flex-wrap='wrap'
                              align-items='center')
    each items
      unless isHome
        if isElegantThemes
          li: a(class='brand'
                href=path)=name
        else if isCart
          li(class='cart'): a(class='btn'
                              href=pathFor(name))
            i(class='icon_cart')
            span(class='badge') 1
        else if isRegister
          li(class='register'): a(class='btn'
                                  href=pathFor(name)) Create an Account
        else if isLogin
          li(class='login'): a(class='btn'
                               href=pathFor(name))=name
        else if isLogout
          li(class='logout'): a(class='btn'
                                href=pathFor(name))=name
        else
          li: a(class=isActive
                href=pathFor(name))=name